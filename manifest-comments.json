{
  "manifest_version": 3, 
  "name": "Westlaw Session Keeper", 
  "version": "1.0", 
  "description": "Keeps your Westlaw session alive by simulating minimal activity.",

  // Permissions the extension needs:
  // - "scripting": to inject our script into the Westlaw pages
  // - "storage": to remember whether the user has toggled Keep Alive on/off
  "permissions": ["scripting", "storage"],

  // Limit the extension only to Westlaw.com (safe + scoped)
  "host_permissions": ["*://*.westlaw.com/*"],

  // Background service worker (keeps track of toggle state across tabs)
  "background": {
    "service_worker": "background.js"
  },

  // The little popup that opens when you click the extension icon
  "action": {
    "default_popup": "popup.html",
    "default_title": "Westlaw Session Keeper"
  },

  // Injects the content script into every Westlaw.com page the user loads
  "content_scripts": [
    {
      "matches": ["*://*.westlaw.com/*"],
      "js": ["content.js"]
    }
  ]
}
